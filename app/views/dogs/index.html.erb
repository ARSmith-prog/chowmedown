<h1>Dogs</h1>



<table>
  <thead>
    <tr >
      <th class=" px-4">Name</th>
      <th class=" px-4">Age</th>
      <th class=" px-4">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr class="text-center">
          <%= image_tag("img/am1.png") %>
        <td><%= dog.name %></td>
        <td><%= dog.age %></td>
        <td ><%= button_to 'Show', dog_path(:id => dog.id), :method => :get, :class => "btn btn-warning btn-sm"%></td>

        <%if current_user && current_user.admin? %>

	      <td><%= button_to 'Edit', edit_dog_path(:id => dog.id), :method => :get, :class => "btn btn-warning btn-sm" %></td>
        <td><%= button_to 'Destroy', dog_path(:id => dog.id), :method => :delete, :class => "btn btn-warning btn-sm" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>








<br>

<%= link_to 'New Dog', new_dog_path, :class => "btn btn-primary btn-sm text-white" %>
<%= link_to 'Home', public_main_path, :class => "btn btn-primary btn-sm text-white" %>
